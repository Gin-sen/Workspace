alias k='kubectl'
alias kg='kubectl get'
alias kgp='kubectl get pods'
alias kgs='kubectl get secret'
alias kcc='kubectl config current-context'
alias kcg='kubectl config get-contexts'
alias kcu='kubectl config use-context'
alias kd='kubectl describe'
alias vagrant='vagrant.exe'
alias helm='helm.exe'
alias mkcd='function _mkcd(){ mkdir "$1" && cd "$1"; }; _mkcd'
alias kcn='function _kcn(){ kubectl config set-context --current --namespace="$1"; kubectl config view --minify | grep namespace: ;}; _kcn'
#alias kcv='kubectl config view --minify'
alias terraform='terraform.exe'
alias t='terraform.exe'
alias istioctl='istioctl.exe'
alias i='istioctl.exe'
alias kga='function _prettier_kga(){ LIST=($(kubectl api-resources --verbs=list --namespaced -o name)); for ((i=0; i < ${#LIST[@]} ; i++)); do printf "|||||||||||||||      %s      |||||||||||||||\n" "${LIST[$i]}" && kubectl get --show-kind --ignore-not-found ${LIST[$i]} ; done; }; _prettier_kga'
alias kga_n='function _prettier_kga_n(){ LIST=($(kubectl api-resources --verbs=list --namespaced -o name)); for ((i=0; i < ${#LIST[@]} ; i++)); do printf "|||||||||||||||      %s      |||||||||||||||\n" "${LIST[$i]}" && kubectl get --show-kind --ignore-not-found ${LIST[$i]} -n "$1"; done; }; _prettier_kga_n'
